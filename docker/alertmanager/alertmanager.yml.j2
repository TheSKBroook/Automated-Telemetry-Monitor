global:
  resolve_timeout: 5m
  
route:
  receiver: "line"
  group_by: ['alertname']
  group_wait: 10s
  group_interval: 30s
  repeat_interval: 1m
  routes:
    - receiver: "actions"
      match_re:
        severity: "Critical|Warning"
      continue: true

    - receiver: "line"
      continue: true

receivers:
  - name: "line"
    webhook_configs:
    - url: 'http://{{ webhook_ip }}:5000/webhook'
      send_resolved: true
      http_config:
        bearer_token: {{ line_token }}

  - name: "actions"
    webhook_configs:
      - url: 'http://{{ webhook_ip }}:5100/webhookcallback'
        send_resolved: true


    